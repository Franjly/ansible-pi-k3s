---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ kubernetesDashboard.rbac.user }}
  namespace: {{ kubernetesDashboard.namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ kubernetesDashboard.rbac.user }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ kubernetesDashboard.rbac.role }}
subjects:
- kind: ServiceAccount
  name: {{ kubernetesDashboard.rbac.user }}
  namespace: {{ kubernetesDashboard.namespace }}
---
apiVersion: v1
kind: Secret
metadata:
  name: {{ kubernetesDashboard.rbac.user }}
  namespace: {{ kubernetesDashboard.namespace }}
  annotations:
    kubernetes.io/service-account.name: {{ kubernetesDashboard.rbac.user }}
type: kubernetes.io/service-account-token