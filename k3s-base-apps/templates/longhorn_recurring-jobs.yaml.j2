---
apiVersion: longhorn.io/v1beta1
kind: RecurringJob
metadata:
  name: snapshot-default
  namespace: {{ longhorn.namespace }}
spec:
  cron: "0 5 * * *"
  task: "snapshot"
  groups:
  - default
  retain: 3
  concurrency: 2
---
apiVersion: longhorn.io/v1beta1
kind: RecurringJob
metadata:
  name: backup-default
  namespace: {{ longhorn.namespace }}
spec:
  cron: "0 6 * * *"
  task: "backup"
  groups:
  - default
  retain: 3
  concurrency: 2
